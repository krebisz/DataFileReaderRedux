<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- 
      Root Directory: Point to your main health data folder.
      The application will recursively search all subdirectories for JSON files.
      
      Example structures that work:
      Option 1 - Single folder with all providers:
        C:\HealthData\
          ├── GoogleHealth\
          │   ├── HeartRate\
          │   │   ├── 2024-01-01.json
          │   │   └── 2024-01-02.json
          │   └── Steps\
          │       └── ...
          ├── Samsung\
          │   └── ...
          └── Huawei\
              └── ...
      
      Option 2 - Flat structure (all files in one place):
        C:\HealthData\
          ├── file1.json
          ├── file2.json
          └── ...
      
      Option 3 - Any nested structure - the app will find all JSON files recursively
    -->
    <add key="RootDirectory" value="C:\Documents\Personal\Health\Health Data\Samsung Health" />
    
    <!-- 
      Database Connection String for SQL Server
      Format: Data Source=SERVER;Initial Catalog=DATABASE;Integrated Security=SSPI;TrustServerCertificate=True
      Or use SQL authentication: Data Source=SERVER;Initial Catalog=DATABASE;User Id=USER;Password=PASSWORD;TrustServerCertificate=True
      
      Note: TrustServerCertificate=True bypasses SSL certificate validation (use only for development/local)
    -->
    <add key="HealthDB" value="Data Source=(local);Initial Catalog=Health;Integrated Security=SSPI;TrustServerCertificate=True" />
    
    <!-- 
      Optional: File extensions to process (comma-separated)
      Default: json (csv support can be added later)
    -->
    <add key="FileExtensions" value="json" />
    
    <!-- 
      Optional: Maximum files to process (0 = unlimited)
      Useful for testing with a subset of data
    -->
    <add key="MaxFilesToProcess" value="0" />
    
    <!-- 
      Optional: Enable detailed logging
      Set to "true" to see detailed processing information
    -->
    <add key="VerboseLogging" value="true" />
  </appSettings>
</configuration>